    menu "Feature usage"
        config LV_FEATURE_USE_ANIMATION
            bool "Enable the Animations."
            default y
        config LV_FEATURE_USE_SHADOW
            bool "Enable shadow drawing."
            default y
        config LV_SHADOW_CACHE_SIZE
            int "Shadow cache size"
            depends on LV_FEATURE_USE_SHADOW
            default 0
            help
                Allow buffering some shadow calculation
                LV_SHADOW_CACHE_SIZE is the max. shadow size to buffer,
                where shadow size is `shadow_width + radius`
                Caching has LV_SHADOW_CACHE_SIZE^2 RAM cost.
        config LV_FEATURE_USE_BLEND_MODES
            bool "Use other blend modes then normal (LV_BLEND_MODE_...)."
            default y
        config LV_FEATURE_USE_OPA_SCALE
            bool "Use the 'opa_scale' style property to set the opacity of an object and it's children at once."
            default y
        config LV_FEATURE_USE_IMG_TRANSFORM
            bool "Use image zoom and rotation."
            default y
        config LV_FEATURE_USE_GROUP
            bool "Enable object groups (for keyboard/encoder navigation)."
            default y
        config LV_FEATURE_USE_GPU
            bool "Enable GPU interface (only enabled 'gpu_fill_cb' and 'gpu_blend_cb' in the disp. drv."
            default y
        config LV_FEATURE_USE_GPU_STM32_DMA2D
            bool "Enable STM32 DMA2D."
        config LV_FEATURE_USE_FILESYSTEM
            bool "Enable file system (might be required for images."
            default y
        config LV_FEATURE_USE_USER_DATA
            bool "Add a 'user_data' to drivers and objects."
        config LV_FEATURE_USE_PERF_MONITOR
            bool "Show CPU usage and FPS count in the right bottom corner."
        config LV_FEATURE_USE_API_EXTENSION_V6
            bool "Use the functions and types from the older API if possible."
            default y
    endmenu
    
